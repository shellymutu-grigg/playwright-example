{
    "compilerOptions": {
      "lib": ["es6", "dom"],
      "baseUrl": ".", // This must be specified if "paths" is.
      "paths": {
        "@constants": [ "constants/"],
      },
      "types": [ "node" ],
      "typeRoots": [ "../node_modules/@types" ],
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "Node",
      "sourceMap": true,
      "outDir": "../tests-out",
      "moduleDetection": "force",
      "jsx": "preserve"
    },
}